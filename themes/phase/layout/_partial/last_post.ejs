<article class="LastPost">
  <% if (item.link){ %>
    <% if (item.title){ %>
      <h2 class="LastPost__Header"><a href="<%- item.link %>" class="link" target="_blank"><%= item.title %></a></h2>
    <% } else { %>
      <h2 class="LastPost__Header"><a href="<%- item.link %>" class="link" target="_blank"><%= item.link %></a></h2>
    <% } %>
  <% } else { %>
    <% if (index){ %>
      <h2 class="LastPost__Header"><a href="<%- config.root %><%- item.path %>"><%= item.title %></a></h2>
    <% } else { %>
      <h2 class="LastPost__Header"><%= item.title %></h2>
    <% } %>
  <% } %>
  <p class="LastPost__Extract">
    <% if (item.excerpt && index){ %>
      <%- item.excerpt %>
    <% } else { %>
      <%- item.content %>
    <% } %>
  </p>
</article>

